{
    "manifest_version": 3,
    "name": "Browser Pet",
    "version": "1.0",
    "permissions": ["scripting", "storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["pet.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["pet2.gif", "style.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }